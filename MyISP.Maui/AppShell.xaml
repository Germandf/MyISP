<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyISP.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyISP.Maui.Views"
    Title="MyISP.Maui">

    <TabBar>
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Route="Login" />
        <ShellContent
            Title="Services"
            ContentTemplate="{DataTemplate views:MyServicesPage}"
            Route="MyServices" />
        <ShellContent
            Title="Invoices"
            ContentTemplate="{DataTemplate views:InvoicesPage}"
            Route="Invoices" />
        <ShellContent
            Title="Contact"
            ContentTemplate="{DataTemplate views:ContactInfoPage}"
            Route="ContactInfo" />
        <ShellContent
            Title="Tickets"
            ContentTemplate="{DataTemplate views:TechnicalRequestsPage}"
            Route="TechnicalRequests" />
    </TabBar>

</Shell>
