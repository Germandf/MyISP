<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyISP.Maui.Models"
             xmlns:views="clr-namespace:MyISP.Maui.Views"
             x:Class="MyISP.Maui.Views.MyServicesPage"
             x:Name="Root"
             Title="My Services">
    <Grid>
        <RefreshView x:Name="PullToRefresh" Refreshing="OnRefresh">
            <VerticalStackLayout Padding="12" Spacing="10">
                <Label Text="Internet Services" FontAttributes="Bold"/>
                <CollectionView x:Name="InternetList">
                    <CollectionView.EmptyView>
                        <Label Text="No internet services"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:InternetSubscriptionDto">
                            <Grid Padding="8" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Service.Name}" />
                                <Label Grid.Column="1" Text="{Binding Service.Mbps}" />
                                <Label Grid.Column="2" Text="Mbps" />
                                <Label Grid.Column="3" Text="{Binding Service.MonthlyPrice, StringFormat='${0:F2}'}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Mobile Services" FontAttributes="Bold" Margin="0,12,0,0"/>
                <CollectionView x:Name="MobileList">
                    <CollectionView.EmptyView>
                        <Label Text="No mobile services"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:MobileSubscriptionDto">
                            <Grid Padding="8" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Service.Name}" />
                                <Label Grid.Column="1" Text="{Binding Service.Gbs}" />
                                <Label Grid.Column="2" Text="GB" />
                                <Label Grid.Column="3" Text="{Binding Service.MonthlyPrice, StringFormat='${0:F2}'}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
            </VerticalStackLayout>
        </RefreshView>
        
        <Grid BindingContext="{x:Reference Root}" x:DataType="views:MyServicesPage" IsVisible="{Binding IsBusy}" BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True" IsVisible="True" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>