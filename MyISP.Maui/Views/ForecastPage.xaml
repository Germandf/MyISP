<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyISP.Maui.Views.ForecastPage"
             Title="Forecast">
    <VerticalStackLayout Padding="12" Spacing="6">
        <Button Text="Refresh" Clicked="OnRefresh"/>
        <CollectionView x:Name="ForecastList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Padding="8">
                        <Label Text="{Binding Date}" WidthRequest="120"/>
                        <Label Text="{Binding Summary}" HorizontalOptions="StartAndExpand"/>
                        <Label Text="{Binding TemperatureC}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>