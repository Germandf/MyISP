<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyISP.Maui.Views.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Sign in" Style="{StaticResource Headline}" />
        <Entry x:Name="UsernameEntry" Placeholder="Email or username" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Button Text="Login" Clicked="OnLoginClicked"/>
        <Button Text="Create account" Clicked="OnRegisterClicked"/>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>