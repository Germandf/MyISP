<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyISP.Maui.Models"
             xmlns:views="clr-namespace:MyISP.Maui.Views"
             x:Class="MyISP.Maui.Views.InvoicesPage"
             x:Name="Root"
             Title="My Invoices">
    <Grid>
        <RefreshView x:Name="PullToRefresh" Refreshing="OnRefresh">
            <VerticalStackLayout Padding="12" Spacing="10">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="Months:" VerticalOptions="Center"/>
                    <Entry x:Name="MonthsEntry" Text="12" Keyboard="Numeric" WidthRequest="80"/>
                    <Button Text="Load" Clicked="OnLoadClicked"/>
                </HorizontalStackLayout>

                <Label Text="Pending" FontAttributes="Bold"/>
                <CollectionView x:Name="PendingList">
                    <CollectionView.EmptyView>
                        <Label Text="No pending invoices"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:InvoiceDto">
                            <Grid Padding="8" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding InvoiceNumber}"/>
                                <Label Grid.Column="1" Text="{Binding IssueDate, StringFormat='{0:yyyy-MM-dd}'}"/>
                                <Label Grid.Column="2" Text="{Binding TotalAmount, StringFormat='${0:F2}'}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Paid" FontAttributes="Bold" Margin="0,12,0,0"/>
                <CollectionView x:Name="PaidList">
                    <CollectionView.EmptyView>
                        <Label Text="No paid invoices"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:InvoiceDto">
                            <Grid Padding="8" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding InvoiceNumber}"/>
                                <Label Grid.Column="1" Text="{Binding IssueDate, StringFormat='{0:yyyy-MM-dd}'}"/>
                                <Label Grid.Column="2" Text="{Binding TotalAmount, StringFormat='${0:F2}'}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
            </VerticalStackLayout>
        </RefreshView>
        
        <Grid BindingContext="{x:Reference Root}" x:DataType="views:InvoicesPage" IsVisible="{Binding IsBusy}" BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True" IsVisible="True" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>